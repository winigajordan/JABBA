{% extends 'base.pages.html.twig' %}
{% block title %} Gestion boutique | commandes {% endblock %}
{% block body %}
    <div class="container" style="margin-top: 200px">
        <div class="card p-3">
            <div class="card-header">
                Commandes de ma boutiques
            </div>
            <div class="card-body">
                <table class="table table-striped table-striped">
                    <thead>
                    <tr>
                        <th scope="col">Reference</th>
                        <th scope="col">Produit</th>
                        <th scope="col">Quantit√©</th>
                        <th scope="col">Montant vente</th>
                        <th scope="col">Etat</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for item in ventes %}
                    <tr>
                        <th scope="row">{{ item.slug }}</th>
                        <td>{{ item.produit.libelle }}</td>
                        <td>{{ item.quantite }}</td>
                        <td>{{ item.prix }}</td>
                        <td>{{ item.etat }}</td>
                        <td>
                            <a class="btn btn-xs btn-primary" href="{{ path('app_boutique_commandes_update', {'slug':item.slug, 'update' : 'VALIDE'}) }}">Valider</a>
                            <a class="btn btn-xs btn-warning" href="{{ path('app_boutique_commandes_update', {'slug':item.slug, 'update' : 'ANNULE'}) }}">Annuler</a>
                        </td>
                    </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
