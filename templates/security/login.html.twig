{% extends 'base.pages.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

    <div class="card-group" >
        <div class="card-left w-50">
            <img src="{{ asset('frontend/assets/Rectangle48.png') }}" class="card-img-top"  >

        </div>
        <div class="card-right w-50" style="padding:3%; margin-top: 10%;">
            <form method="post">
                <div class="mb-5">
                    <h3>CONNECTEZ-VOUS</h3>
                </div>

                {% if error %}
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <strong> ‚ùå </strong> Erreur de connexion
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endif %}

                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">NOM D'UTILISATEUR/EMAIL</label>
                    <input type="email" value="{{ last_username }}" name="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" required autofocus>
                </div>
                <div class="mb-3">
                    <label for="exampleInputPassword1" class="form-label">MOT DE PASSE</label>
                    <input type="password" class="form-control" id="exampleInputPassword1" name="password" autocomplete="current-password" required>
                </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">


                <div class="align-items-center">
                    <button class="btn1 btn-primary" type="submit" name="btn_save" value="connexion">Connexion</button>
                    <hr>
                    <p>Pas encore membre ?</p>

                    <a class="btn btn-primary"  href="{{ path('app_register') }}">S'enregistrer maintenant !</a>
                </div>

            </form>
        </div>

    </div>

