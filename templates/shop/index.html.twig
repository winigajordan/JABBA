{% extends 'base.pages.html.twig' %}
{% block title %} Shop {% endblock %}

{% block body %}
    <div class="container">
        <div class="card">
            <div class="card-header">
                <p>Filtre</p>
                <ul class="list-group list-group-horizontal">
                    <li class="list-group-item">
                        <a class="btn btn-sm btn-warning" href="{{ path('app_boutique') }}">
                            Tous les produits
                        </a>
                    </li>
                    {% for btq in boutiques %}
                    <li class="list-group-item">
                        <a class="btn btn-sm btn-primary" href="{{ path('app_boutique', {'boutique' : btq.slug}) }}">
                            {{ btq.nom }}
                        </a>
                    </li>
                    {% endfor %}
                </ul>
            </div>
            <div class="card-body">
                <p>Liste des articles</p>
                <table class="table table-striped table-hover">
                    <thead>
                    <tr>
                        <th scope="col">Nom</th>
                        <th scope="col">Prix</th>
                        <th scope="col">Cat√©gorie</th>
                        <th scope="col">Solde</th>
                        <th scope="col">Boutique</th>
                        <th scope="col">Image</th>
                        <th scope="col"></th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for prod in produits %}
                        <tr>
                            <th  >{{ prod.libelle }}</th>
                            <td>{% if prod.isSolde %} {{ prod.newMontant }} {% else %} {{ prod.montant }} {% endif %}</td>
                            <td>{{ prod.categorie.libelle }}</td>
                            <td>{% if prod.isSolde %} OUI {% else %} NON{% endif %}</td>
                            <td>{{ prod.boutique.nom }}</td>
                            <td> <img src="{{ asset('/files/images/products/') }}{{ prod.image }}" width="50" height="50"></td>
                            <td>
                                <div class="row ">
                                    <div class="col">
                                        <form method="post" action="{{ path('app_add_item') }}">
                                            <div class="row">
                                                <div class="col">
                                                    <input type="number" class="form-control" value="1" name="qte">
                                                    <input type="text" name="id" hidden value="{{ prod.slug }}">

                                                </div>
                                                <div class="col">
                                                    <input type="submit" class="btn btn-sm btn-primary" href="#" value="Ajout au panier">
                                                </div>
                                            </div>

                                        </form>
                                    </div>

                                    <div class="col">
                                        <a class="btn btn-sm btn-primary" href="#"> Achat </a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock body %}